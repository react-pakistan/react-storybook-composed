{
  "compilerOptions": {
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./images.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/__tests__",
    "./jest",
    "./.storybook",
  ]
}
